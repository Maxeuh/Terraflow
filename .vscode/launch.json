{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Next.js with Bun",
            "runtimeExecutable": "bun",
            "runtimeArgs": ["run", "dev", "--turbopack"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "skipFiles": ["<node_internals>/**"],
            "sourceMaps": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "outFiles": ["${workspaceFolder}/.next/**/*.js"]
        }
    ]
}
